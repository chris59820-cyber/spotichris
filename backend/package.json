{
  "name": "spotichris-backend",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:init": "tsx src/db/init-db.ts",
    "db:migrate": "psql -U $DB_USER -d $DB_NAME -f src/db/migrations/001_initial_schema.sql",
    "db:seed": "tsx src/db/seed/seed.ts",
    "db:hash": "tsx src/db/scripts/create-bcrypt-hash.ts",
    "db:fix-passwords": "tsx src/db/scripts/fix-passwords.ts",
    "db:add-media": "tsx src/db/scripts/add-media.ts",
    "db:add-media-local": "tsx src/db/scripts/add-media-local.ts",
    "test:websocket": "tsx src/utils/test-websocket.ts"
  },
  "dependencies": {
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.11.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.2.2"
  }
}
